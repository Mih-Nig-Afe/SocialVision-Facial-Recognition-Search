# SocialVision Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=False
APP_NAME=SocialVision

# Face Recognition Settings
FACE_RECOGNITION_MODEL=hog
FACE_DETECTION_CONFIDENCE=0.5
FACE_MATCH_THRESHOLD=0.6

# Image Upscaling Settings
IMAGE_UPSCALING_ENABLED=True
IMAGE_UPSCALING_BACKEND=realesrgan_x6plus
IMAGE_UPSCALING_TARGET_SCALE=8.0
IMAGE_UPSCALING_TILE=192
IMAGE_UPSCALING_TILE_PAD=16
IMAGE_UPSCALING_MIN_EDGE=320
IMAGE_UPSCALING_MAX_EDGE=4096
IMAGE_UPSCALING_MAX_PASSES=2
IMAGE_UPSCALING_TARGET_TILES=25
IMAGE_UPSCALING_MIN_REALESRGAN_SCALE=1.02
IBM_MAX_ENABLED=True
IBM_MAX_URL=http://ibm-max:5000
IBM_MAX_TIMEOUT=180
IBM_MAX_HOST_PORT=5100
IBM_MAX_PLATFORM=linux/amd64
IBM_MAX_FAILURE_THRESHOLD=3
IBM_MAX_PROBE_ON_START=true
NCNN_UPSCALING_ENABLED=False
NCNN_EXEC_PATH=
NCNN_MODEL_NAME=realesrgan-x4plus

# Image Processing Settings
MAX_IMAGE_SIZE=10485760
IMAGE_QUALITY=85

# Search Settings
MAX_RESULTS=50
SIMILARITY_THRESHOLD=0.6

# Database Settings
DB_TYPE=local
# DB_TYPE options:
# - local: JSON file at LOCAL_DB_PATH
# - firestore: force Google Cloud Firestore
# - realtime: force Firebase Realtime Database
# - firebase: prefer Firebase Realtime Database; fall back to Firestore; then fall back to local JSON
FIREBASE_ENABLED=False
FIREBASE_CONFIG_PATH=./config/firebase_config.json
FIREBASE_PROJECT_ID=

# Realtime Database (used when DB_TYPE=realtime or DB_TYPE=firebase fallback)
FIREBASE_DATABASE_URL=
FIREBASE_DB_ROOT=faces_database

# Firestore settings (used when DB_TYPE=firestore or DB_TYPE=firebase primary)
FIRESTORE_COLLECTION_PREFIX=socialvision_
FIRESTORE_DATABASE_ID=(default)
FIRESTORE_LOCATION_ID=us-central
FIRESTORE_ENSURE_DATABASE=False

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Streamlit Settings
STREAMLIT_PORT=8501
STREAMLIT_THEME=dark

# Logging Settings
LOG_LEVEL=INFO

# Performance Settings
BATCH_SIZE=32
NUM_WORKERS=4
CACHE_SIZE=1000

